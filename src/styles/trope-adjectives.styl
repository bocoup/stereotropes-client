.trope-adjectives-timeline {

  g.axis {
    line {
      stroke-width: 1px
      stroke: $light-grey;
    }

    circle {
      stroke: $dark-grey;
      fill: white;
    }

    circle.selected {
      fill: $highlight-col;
      stroke: $highlight-col;
    }
  }

  g.triangles {
    .triangle {
      stroke: none;
      fill:  $silver-blue;
      opacity: 0.25;
    }

    .triangle.selected {
      fill: $silver-blue-dark;
    }
  }

  g.adjectives {
    font-family: $adjective-font;
    font-variant:small-caps;
    cursor: pointer;

    .hidden {
      display: none;
    }

    .selected {
      text-decoration: underline;
    }
  }
}