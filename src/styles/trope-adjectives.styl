.trope-adjectives-timeline {

  .instruction {
    font-size: 0.8em;
    display: inline-block;
    background-color: $silver-blue-dark;
    color: white;
    padding: 2px;
  }
  .left {
    float: left;
  }
  .right {
    float: right;
  }

  .vis {
    margin-top: 10px;
    display: inline-block;
    g.axis {
      line {
        stroke-width: 1px
        stroke: $light-grey;
      }

      circle {
        stroke: $dark-grey;
        fill: white;
      }

      circle.selected {
        fill: $silver-blue-dark;
        stroke: $silver-blue-dark;
      }
    }

    g.triangles {
      .triangle {
        stroke: none;
        fill:  $silver-blue;
        opacity: 0.25;
      }

      .triangle.selected {
        fill: $silver-blue-dark;
      }

      .triangle.unique {
        fill: $highlight-col
      }

      .triangle.selected.unique {
        fill: #B03030;
      }
    }

    g.adjectives {
      font-family: $adjective-font;
      font-variant:small-caps;
      cursor: pointer;

      text {
        fill: $silver-blue-dark;
      }

      .hidden {
        display: none;
      }

      .selected {
        text-decoration: underline;
      }
    }
  }
}