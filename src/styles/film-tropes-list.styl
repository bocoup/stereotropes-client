
.film-page {
.film-tropes-list-container {
  .vis .gender {
    text.highlight {
      fill: #fff;
      }
    }
  .vis .underbox.gender-f {
    fill: $female-col;
  }
  .vis .underbox.gender-m {
    fill: $male-col;
  }
  .vis .beam.gender-f {
    fill: $female-col-25;
  }
  .vis .beam.gender-m {
    fill: $male-col-25;
  }
  .vis .gender-f {
    text {
      fill: $female-col-50;
      text-anchor: end;
      }
    rect.highlight {
      background-color: $female-col;
      }
  }
  .vis .gender-m {
    text {
      fill: $male-col-50;
      text-anchor: start;
      }
    }
  }

  .vis .middle-panel {
    text {
      font-size: 14px;
      }
    .background.gender-m {
      fill: $male-col-50;
    }
    .background.gender-f {
      fill: $female-col-50;
    }
  }
}
