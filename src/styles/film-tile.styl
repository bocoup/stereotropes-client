  }
  .text-tile {
    min-width: $tileSize;
    max-width: $tileSize;
    margin-left: 1.5%;
    margin-right: 1.5%;
    padding-right: 0;

    p {
      font-size: 1.3em;
    }
    height: 100%;
  }
}


