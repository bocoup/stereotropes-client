film-tile-all(){

  .film-tile, .text-tile  {
    min-width: 160px;
    display: inline-block;
    float: left;
    position: relative;

    .image {

      div {
        background-position: 50% 0%;
        background-size: cover;

        height: 250px;
        position: relative;
        transition: ease 750ms background-position;
        width: 100%;
      }
      .box {
        background: $grey;
        background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='20' height='20'><rect width='10' height='10' fill='#9e9e9e' /><rect x='10' y='10' width='1' height='1' fill='#EEEEEE' /></svg>");
        background-repeat: repeat;
      }
      .title {
        font-variant: small-caps;
        text-transform: lowercase;
        text-align: left;
        font-weight: 200;
        color: white;
        font-size: 1.7em;
        line-height: 1.0em;
        position: absolute;
        bottom: 10px;
        left: 10px;
        max-width: 140px;

        background-color:$grey;
      }

    }
  }

  .text-tile {

    a {
      cursor: pointer;
    }

    p {
      margin: 0;
      padding: 0px !important;

      font-size: 16px;
      font-weight: 300;
      padding-right: 15px;
    }
  }

  /*  .text-tile.genres {
    max-width: 160px;
  }*/

}


