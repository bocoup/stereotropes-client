//
// size specific tile functions
//

// default setup. Margins of 2%.
setup-tile-margins() {
  .film-tile {
    margin-left: 2%;
    margin-right: 2%;
    margin-bottom: 10px;
  }

  .text-tile {
    margin-left: 2%;
    margin-right: 2%;

    p {
      padding-left: 5px;
      padding-top: 10px;
    }
  }
}

film-tile-mobile() {
  setup-tile-margins();

  .film-tile {
    min-width: 120px;
    width: 44%;
  }
  .text-tile {
    min-width: 100%;
    max-width: 100%;
    padding: 10px 0 10px 0;
    p {
      font-size: 150%;
    }
    height: 100%;
  }
}

film-tile-tablet() {

  $tileSize = 28.5%;
  setup-tile-margins();

  .film-tile {
    min-width: 140px;
    width: $tileSize;
  }
  .text-tile {
    min-width: $tileSize;
    max-width: $tileSize;
    padding-right: 0;

    p {
      font-size: 1.2em;
    }
  }
}

film-tile-large() {

  $tileSize = 20%;
  setup-tile-margins();

  .film-tile {

    min-width: 140px;
    width: $tileSize;
  }
  .text-tile {
    min-width: $tileSize;
    max-width: $tileSize;
    padding-right: 0;

    p {
      font-size: 1.3em;
    }
    height: 100%;
  }
}

film-tile-xlarge() {

  $tileSize = 16%;
  setup-tile-margins();

  .film-tile {
    min-width: 150px;
    width: $tileSize;
    margin-left: 1.5%;
