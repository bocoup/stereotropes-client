// Films list page

.films-page {
  center-page()
  film-tile-all()
  film-tile()


  .film-tiles-container {
    margin-top: 20px;
    // not enough for all tiles - but enough
    // to ensure the scrollbar is present
    // at the start.
    min-height: 1280px;

    .text-tile {
      a {
        cursor: pointer;
        }
      padding-right: 28px;
      padding-bottom: 18px;
      height: 250px;
      p {
        padding-top: 30%;
      }
    }

    .film-tile {
      margin-right: 25px;
      margin-bottom: 10px;
      padding: 2px;

      .image {
        cursor:pointer;
      }

      border-bottom: 4px solid white
      &:hover{
        border-bottom: 4px solid $highlight-col
      }
    }
  }
}


// Individual Film Page

.film-page {

  center-page()
  film-tile-all()
  film-tile()

  .film-tile-container {
    width: 160px;
    float: left;
  }

  .film-detail-container {
    margin-left: 200px

    .details {

      .description {
        font-family: $long-description-font;
        display: -webkit-box;
        text-overflow: ellipsis;
        overflow-y:hidden;

        margin: 0 auto;
        margin-top: 10px;
        -webkit-line-clamp: 8;
        -webkit-box-orient: vertical;
        text-overflow: -o-ellipsis-lastline; /* Opera just does this, I guess? */
      }

      .more {
        margin-top: 15px;
        float:right;
      }
    }
  }
}
