// Films list page

.films-page {
  center-page()
  film-tile-all()
  film-tile()
  films-tile()

  @media screen and (max-width:$screen-size-sm) {
    film-tile-mobile();
  }

  @media screen and (min-width: $screen-size-sm) and (max-width: $screen-size-md) {
    film-tile-tablet();
  }

  @media screen and (min-width: $screen-size-md) and (max-width: $screen-size-lg) {
    film-tile-large();
  }

   @media screen and (min-width: $screen-size-lg) {
    film-tile-xlarge();
  }

  .film-tiles-container {
    // not enough for all tiles - but enough
    // to ensure the scrollbar is present
    // at the start.
    min-height: 1280px;
  }

  h2 {
    margin-bottom: 20px;
  }
}


// Individual Film Page

.film-page {

  center-page()
  film-tile-all()
  film-tile()

  .film-tile-container {
    width: 160px;
    float: left;
  }

  .film-detail-container {
    margin-left: 200px

    .details {

      .description {
        font-family: $long-description-font;
        display: -webkit-box;
        text-overflow: ellipsis;
        overflow-y:hidden;

        margin: 0 auto;
        margin-top: 10px;
        -webkit-line-clamp: 8;
        -webkit-box-orient: vertical;
        text-overflow: -o-ellipsis-lastline; /* Opera just does this, I guess? */
      }

      .more {
        margin-top: 25px;
        float:right;
      }
    }
  }
}
