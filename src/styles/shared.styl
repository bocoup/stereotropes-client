html, button, input, select, textarea,
.pure-g [class *= "pure-u"] {
    font-family: $body-font;
    color: $dark-grey;

    font-size: 14px;
}


h1, h2, h3, h4, h5 {
  font-weight: 500;
  margin-top:0;
  margin-bottom:0;
  font-family: $header-font;
}

h2 {
  font-weight: 300;
}

h3 {
  font-variant: small-caps;
  font-size: 18px;
}

h4 {
  font-variant: small-caps;
  color: $grey;
}

body {
  padding:20px;
}

$max-mobile-width = 567px;
$min-med-width = $max-mobile-width + 1;
$max-med-width = 820px;

@media screen and (max-width:$max-mobile-width) {
  .hide-small{display:none;}
}

@media screen and (min-width:$min-med-width) {
  .show-small{display:none;}
}

a, a:visited{
  padding: 0 2px 0 2px;
  // color: $highlight-col;
  color: $dark-grey
  text-decoration: underline;
}

a:hover{
  padding: 0 2px 0 2px;
  color: $dark-grey;
  background-color: $highlight-col;
  text-decoration: underline;
}

a:active {
  color: $dark-grey;
}

aside {
  font-size: 0.8em;
  color: $grey;
}

.secondary {
  color: $grey
}

#heart {
  font-size: 90%;
}

.adjective-name {
  font-family: $adjective-font;
  font-weight: 300;
}

.trope-name {
  font-family: $trope-font;
  font-weight: 300;
}

.film-name {
  font-family: $film-font;
  font-weight: 300;
}

.main {
  padding-bottom: 30px;
}

.faded {
  color: $grey;
}

.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
.clearfix {
  *zoom: 1;
}


// Top level nav


#top-bar-container {
  background-color: $dark-grey;
  min-height: 80px;
  min-width: 960px;
  position: absolute;
  top:0px;
  left: 0px;
  width: 100%;
  clear:both;
}

#top-bar{
  max-width: 960px;
  margin: 0 auto;
  margin-top: 25px;
  margin-bottom: 30px;
}

.content {
  padding-top: 100px;
}

site-title-styles() {
  .site-title {
    font-weight: 700;
    color: white;
    text-transform:uppercase;
    letter-spacing: 2px;
    padding: 0 4px 0 4px;
    margin-right: 60px;

    img {
      vertical-align: middle;
      height: 35px;
    }
  }
}

nav {
  font-family: $nav-font;

  ul {
    display:inline;
    padding: 0 0 8px 0;
    border-bottom: 2px solid $dark-grey;
  }

  li {
    display:inline;
    font-size: 16px;
    font-weight: 300;
    line-height: 18px;
    padding-right: 15px;

    .inactive {
      color: $grey !important;
      outline: none;
    }

  }

  a {
    text-decoration: none;
    color: white !important;
    font-style: italic;
  }

  a:hover{
    color: white;
    background-color: $dark-grey;
    text-decoration: underline;
  }


  site-title-styles()

  .site-title {
    font-size: 90%;
  }

  a#pull {
    display:none;
  }
}

@media screen and (max-width:$max-mobile-width) {
  #top-bar-container {
    position: inherit;
    background-color: white;
    height: auto;
    width: 100%;
    min-width:0;
    min-height:0;
  }

  #top-bar {
    margin-top: 0px;
    margin-bottom: 5px;
  }

  .content {
    padding-top: 0px;
  }

  nav {
    height: auto;
    background-color: $dark-grey;
    padding-right:10px;
  }
  nav ul {
    width: 100%;
    display: block;
    height: auto;
    border-bottom: none;
  }
  nav li {
    width: 100%;
    float: left;
    position: relative;
  }
  nav li a {
    padding-left: 10px;
  }

  nav a {
    text-align: left;
    width: 100%;
    text-indent: 20px;
    line-height: 30px;
  }

  nav {
    border-bottom: 0;
  }
  nav ul {
    display: none;
    height: auto;
  }

  site-title-styles()


  nav a#pull {
    display: block;
    background-color: $dark-grey;
    width: 100%;
    text-indent: 15px;
    height: 30px;
    position: relative;
    text-height: 0.8em;
  }
  nav a#pull:after {
    content:"";
     background: url('assets/img/nav-icon-white.png') no-repeat;
     width: 30px;
     height: 30px;
     display: inline-block;
     position: absolute;
     right: 15px;
     top: 5px;
  }
}


// footer
