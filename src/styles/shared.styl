// Trope tiles
trope-details(){
  .details {
    font-family: $long-description-font;
    line-height: 1.4em;
    font-size: 90%

    height: 225px;

    .trope-title {
      margin-bottom: 10px;
    }

    div.description.short {
      text-align: left;


      height: 100px;
      display: -webkit-box;
      text-overflow: ellipsis;
      overflow-y:hidden;

       margin: 0 auto;
      -webkit-line-clamp: 8;
      -webkit-box-orient: vertical;
      text-overflow: -o-ellipsis-lastline; /* Opera just does this, I guess? */
    }

    .more {
      margin-top: 15px;
      float:right;
    }
  }
}


trope-tile(tileWidth, tileHeight) {
  .trope-tile {
    min-width: unit(tileWidth, 'px');
    height: unit(tileHeight, 'px');
    display: inline-block;
    position: relative;

    .image {

      div {
        background-position: 50% 0%;
        background-size: cover;

        height: unit(tileHeight, 'px');
        position: relative;
        transition: ease 750ms background-position;
        width: 100%;
      }

      div:hover {
        background-position: 50% 100%;
      }
    }

    .name {
      position: absolute;
      // top: 70%;
      // left: 5%;
      bottom: 0;
      width: unit(tileWidth, 'px');
      padding: 8px 0 8px 0;
      color: white;
      text-align: center;
      text-transform: uppercase;
      font-weight: 200;
      letter-spacing: 0.5px;
    }


    &.gender-m {
      .name {
        background-color: $male-col;
      }
    }

    &.gender-f {
      .name {
        background-color: $female-col;
      }
    }
  }
}

.gender-split-bar {
  padding-top:10px;
  padding-bottom:10px;
  height: 4px;
  width: 100%;
  .gender {
    height: 100%;
  }
  .gender-f {
    background-color:$female-col-75;
    float:left;
  }
  .gender-m {
    background-color:$male-col-75;
    float:right;
  }
}


