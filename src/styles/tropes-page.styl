.tropes-page {

  center-page()

  .tropes-container {

    $tile-size = 200;
    $tile-margin = 30;

    float: left;
    trope-tile($tile-size, $tile-size);

    .trope-tile:hover {
      cursor: pointer;
    }

    .trope-tile, .text-tile {
      float: left;
      margin-right: unit($tile-margin, 'px');
      margin-bottom: unit($tile-margin - 5, 'px');
    }

    .text-tile.tropes {
      display: inline-block;
      position: relative;
      overflow: hidden;
      max-width:  unit($tile-size * 2 + $tile-margin, 'px');
      height: unit($tile-size * 2 + ($tile-margin - 5) , 'px');
      @media screen and (max-width:$mobile-width) {
        min-height: 100%;
      }

      site-title-styles()

      h1.site-title {
        font-size: 2em;
      }

      a.gender-filter {
        padding-left: 7px;
        padding-right: 7px;
        color: white;
        text-decoration: none;
        cursor: pointer;
        &.m {
          background-color: $male-col;
        }

        &.f {
          background-color: $female-col;
        }
      }
    }

    .text-tile.filter {
      width:  unit($tile-size, 'px');
      height: unit($tile-size, 'px');
      a {
        cursor: pointer;

        &.f {
          background-color: $female-col;
          color: white;
          text-decoration: none;
          padding-left: 7px;
          padding-right: 7px;
        }

        &.m {
          background-color: $male-col;
          color: white;
          text-decoration: none;
          padding-left: 7px;
          padding-right: 7px;
        }
      }

      a:hover {
        color: white;
        background-color: $highlight-col;
      }

      p {
        margin: 0;

        font-size: 16px;
        font-weight: 300;
        line-height: 26px;
        padding-right: 15px;

      }
    }

    .text-tile.navTile {
      width:  unit($tile-size, 'px');
      height: unit($tile-size, 'px');
      a {
        cursor: pointer;
      }

      a:hover {
        color: white;
        background-color: $highlight-col;
      }

      p {
        margin: 0;

        font-size: 16px;
        font-weight: 300;
        line-height: 26px;
        padding-right: 15px;

      }
    }

  }
}
