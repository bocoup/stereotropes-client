.about-page {
  center-page();

  .table-of-contents {
    ol {
      margin: 0;
      counter-reset: item
      padding: 0 0 0 20px;
      li {
        padding: 0;
        display: block;
      }
      li:before {
        content: counters(item, ".") ". ";
        counter-increment: item;
        color: $highlight-col;
      }

      ol {
        li:before {
          content: counters(item, ".") " ";
        }
      }
    }
  }

  .about-content {

    .section {
      margin-top: 20px;

      h3 {
        text-transform:lowercase;
      }

      .aside {
        padding-left: 3em;
        color : $grey;
        font-size: 0.8em;
        font-style:italic;
      }

      ul.tags {
        list-style-type: none;
        padding: 0;

        li {
          display: inline-block;
          float: left;
          padding: 3px;
          margin-right: 5px;
          margin-bottom: 5px;
          background-color: $light-grey;
        }
      }
    }

    trope-timeline();
  }
}